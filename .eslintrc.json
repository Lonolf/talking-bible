{
  "extends": [
    "standard",
    "./react.js"
  ],
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2016
  },
  "parser": "babel-eslint",
  "rules": {
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "space-before-function-paren": [
      "error",
      "never"
    ],
    "curly": [
      "error",
      "multi",
      "consistent"
    ],
    "no-useless-constructor": "off",
    "no-var": "error",
    "prefer-const": "off"
  }
}
